# Development files
.vscode/**
.vscode-test/**
.github/**
.gitignore
.gitattributes
.eslintrc.json
.eslintignore
.prettierrc
.prettierignore
.editorconfig
*.vsix
*.log
*.tsbuildinfo
tsconfig.json
webpack.config.js
eslint.config.mjs

# Source files (since we use webpack to bundle)
src/**
out/**
test/**
**/*.map
**/*.ts
!src/types/**/*.d.ts

# Dependencies (since we bundle them)
node_modules/**
!node_modules/speech-recorder/**
!node_modules/speech-recorder/build/**
!node_modules/speech-recorder/build/Release/**
!node_modules/speech-recorder/build/Release/*.node
!node_modules/bindings/**
!node_modules/node-addon-api/**
!node_modules/play-sound/**
!node_modules/wavefile/**

# Keep only essential files
!dist/**
!package.json
!README.md
!LICENSE
!CHANGELOG.md
!media/**

# Exclude test and example files from dependencies
node_modules/**/test/**
node_modules/**/tests/**
node_modules/**/example/**
node_modules/**/examples/**
node_modules/**/.bin/**
node_modules/**/*.md
node_modules/**/*.txt
node_modules/**/*.d.ts
node_modules/**/.git*
node_modules/**/LICENSE*
node_modules/**/CHANGELOG*
node_modules/**/package.json

# Documentation
docs/**
**/*.pdf
**/*.md
!README.md
!CHANGELOG.md
!LICENSE.md

